pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'sreenath92/devops-learning-app'
        APP_NAME = 'devops-learning-app'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Code checked out successfully'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    dir('docker-projects/web-application') {
                        sh 'docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} .'
                        sh 'docker build -t ${DOCKER_IMAGE}:latest .'
                    }
                }
            }
        }
        
        stage('Test Application') {
            steps {
                script {
                    sh 'docker run --rm ${DOCKER_IMAGE}:${BUILD_NUMBER} npm test'
                }
            }
        }
        
        stage('Deploy Application') {
            steps {
                script {
                    // Stop existing container
                    sh 'docker stop ${APP_NAME} || true'
                    sh 'docker rm ${APP_NAME} || true'
                    
                    // Run new container
                    sh '''
                        docker run -d \
                            --name ${APP_NAME} \
                            -p 3001:3000 \
                            --restart unless-stopped \
                            ${DOCKER_IMAGE}:${BUILD_NUMBER}
                    '''
                }
            }
        }
        
        stage('Health Check') {
            steps {
                script {
                    sleep(time: 30, unit: 'SECONDS')
                    sh 'curl -f http://localhost:3001/api/health'
                }
            }
        }
        
        stage('Cleanup') {
            steps {
                script {
                    // Remove old images except latest 3 builds
                    sh 'docker image prune -f'
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully! Application deployed.'
        }
        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}
